<header class="site-header">
  <nav class="navbar">
    <div class="navbar-brand">
      <%= link_to "Plant Tracker", root_path, class: "navbar-item" %>
    </div>
    <div class="navbar-menu">
      <ul class="navbar-links">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "My Plants", plants_path %></li>
      </ul>
    </div>

    <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
    <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>
    <%= turbo_stream.append "flashes" do %>
      <% if flash[:alert] %>
        <div style="color: pink;"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
        <div style="color: pink;"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:success] %>
        <div style="color: pink;"><%= flash[:success] %></div>
      <% end %>
    <% end %>
  </nav>
</header>