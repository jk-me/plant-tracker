<h1 class="welcome-title">
  Welcome to Plant Tracker
</h1>

<div class="form-container">
  <div class="form-box">
    <%= form_with url: "/login", method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :account, "Account", class: "form-label" %>
        <%= form.text_field :account, class: "form-input" %>
      </div>
      <div class="form-group">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-input" %>
      </div>
      <div class="form-submit">
        <%= form.submit "Login", class: "form-button" %>
      </div>
    <% end %>
  </div>
  <a href="https://www.flaticon.com/free-icons/flower" title="flower icons">Flower icons created by Freepik - Flaticon</a>
</div>
